<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper_background"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_primary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>
    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_10_dip"
        android:orientation="vertical">
        <com.capsule.apps.todokotlin.widgets.EllipsizedTextView
            android:id="@+id/detail_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:text="@string/task.title.sample"
            android:paddingTop="@dimen/dimen_10_dip"
            android:background="@drawable/input_background"
            android:paddingBottom="@dimen/dimen_10_dip"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold"
            android:paddingStart="@dimen/dimen_5_dip"
            android:paddingEnd="@dimen/dimen_5_dip"
            android:textColor="@color/color_gray_dark"
            app:fontVariation="normal"
            app:fixWidowWords="true"/>
        <com.capsule.apps.todokotlin.widgets.OpenTextView
            android:id="@+id/detail_task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium"
            android:padding="@dimen/dimen_5_dip"
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:background="@drawable/input_background"
            android:text="@string/task.description.sample"
            android:textStyle="normal"
            android:lines="12"
            android:textColor="@color/color_gray_dark"
            app:fontVariation="normal"
            app:fixWidowWords="true"/>
    </LinearLayout>
</RelativeLayout>
