<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10_dip"
    android:background="@drawable/paper_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">
    <ListView
        android:id="@+id/task_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#dedede"
        android:dividerHeight="0.5dp"
        tools:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/empty_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">
        <com.capsule.apps.todokotlin.widgets.OpenTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tasks.emtpy.content"
            android:textColor="@color/color_gray_light"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            app:fontVariation="normal"
            app:fixWidowWords="true"/>
    </RelativeLayout>
</FrameLayout>